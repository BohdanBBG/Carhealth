@model Carhealth.ViewModels.RegisterViewModel
<h2>Registration new user</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div>
        <br /><input type="submit" value="Registration" />
    </div>

    <div>
       <br /><a class="btn btn-sm btn-primary" asp-action="Login" asp-c>Back</a>
    </div>
</form>