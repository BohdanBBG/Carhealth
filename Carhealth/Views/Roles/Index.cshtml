@model IEnumerable<Carhealth.Models.IdentityModels.Role>

<h2>Roles List</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-sm btn-info" asp-action="Create">AddRole</a>
<a class="btn btn-sm btn-info" asp-action="UserList">Users lists</a>